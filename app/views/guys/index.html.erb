<p id="notice"><%= notice %></p>

<h1>Listing Guys</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Person</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @guys.each do |guy| %>
      <tr>
        <td><%= guy.name %></td>
        <td><%= guy.person %></td>
        <td><%= link_to 'Show', guy %></td>
        <td><%= link_to 'Edit', edit_guy_path(guy) %></td>
        <td><%= link_to 'Destroy', guy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

